<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="service.translatarr" name="Translatarr" version="2.1.0" provider-name="Addonniss">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.25.1"/>
    </requires>
    <extension point="xbmc.service" library="service.py" start="login"/>
    <extension point="xbmc.python.script" library="service.py">
        <provides>executable</provides>
    </extension>
    <extension point="kodi.addon.metadata">
        <summary lang="en_GB">AI-Powered Subtitle Translator using Google Gemini or OpenAi</summary>
        <description lang="en_GB">Automatically ranslates movie subtitles into your preferred language using the Gemini/OpenAI preffered model. </description>
        <platform>all</platform>
        <license>GPL-2.0-only</license>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
<addon id="repository.addonniss"
       name="Addonniss Repository"
       version="1.0.1"
       provider-name="Addonniss">

    <extension point="xbmc.addon.repository"
               name="Addonniss Repository">
        <dir>
            <info compressed="false">https://addonniss.github.io/repository.addonniss/zips/addons.xml</info>
            <checksum>https://addonniss.github.io/repository.addonniss/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://addonniss.github.io/repository.addonniss/zips/</datadir>
        </dir>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary>Official Repository for Addonniss AI Tools</summary>
        <description>Get the latest updates for Translatarr and other AI-powered Kodi services.</description>
        <platform>all</platform>
    </extension>

</addon>
</addons>
