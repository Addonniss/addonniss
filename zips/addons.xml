<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="service.translatarr" name="Translatarr" version="1.0.0" provider-name="Addonniss">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.25.1"/>
    </requires>
    # THIS BLOCK MAKES IT SHOW IN PROGRAMS
    <extension point="xbmc.python.script" library="service.py">
        <provides>executable</provides>
    </extension>
    # THIS BLOCK MAKES IT RUN AT STARTUP
    <extension point="xbmc.service" library="service.py" start="login"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">AI Subtitle Translator (Translatarr)</summary>
        <description lang="en_GB">Automatically translates subtitles using Gemini AI. Found in Program Add-ons and runs as a background service.</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon>

<addon id="repository.addonniss" name="Addonniss Repository" version="1.0.0" provider-name="Addonniss">
    <extension point="xbmc.addon.repository" name="Addonniss Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/Addonniss/repository.addonniss/main/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/Addonniss/repository.addonniss/main/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/Addonniss/repository.addonniss/main/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Official Repository for Addonniss AI Tools</summary>
        <description>Get the latest updates for Translatarr and other AI-powered Kodi services.</description>
        <platform>all</platform>
    </extension>
</addon>

</addons>
